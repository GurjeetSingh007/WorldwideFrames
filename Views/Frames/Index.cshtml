@model WorldwideFrames.Models.FrameColorViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <form asp-controller="Frames" asp-action="Index">
        <p>
            <select asp-for="FrameColor" asp-items="Model.Colors">
                <option value="">All</option>
            </select>
            Frame Type <input type="text" name="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Frames[0].FrameType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frames[0].FrameStyle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frames[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frames[0].FrameHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frames[0].FrameWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frames[0].FramePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frames[0].Rating)
            </th>
            <th></th>
        </tr>    </thead>
    <tbody>
        @foreach (var item in Model.Frames)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FrameType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrameStyle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrameHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrameWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FramePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
